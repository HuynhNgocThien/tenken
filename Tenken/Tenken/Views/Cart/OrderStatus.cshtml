
@{
    ViewBag.Title = "OrderStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="colorlib-product">
    <div class="container">
        <div class="row row-pb-lg">
            <div class="col-md-10 offset-md-1">
                <div class="process-wrap">
                    <div class="process text-center">
                        <p><span>01</span></p>
                        <h3>Shopping Cart</h3>
                    </div>
                    <div class="process text-center">
                        <p><span>02</span></p>
                        <h3>Checkout</h3>
                    </div>
                    <div class="process text-center active">
                        <p><span>03</span></p>
                        <h3>Order Complete</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-pb-lg">
            <div class="col-md-12">
                <div class="product-name d-flex">
                    <div class="one-forth text-left px-4">
                        <span>Product Details</span>
                    </div>
                    <div class="one-eight text-center">
                        <span>Price</span>
                    </div>
                    <div class="one-eight text-center">
                        <span>Quantity</span>
                    </div>
                    <div class="one-eight text-center">
                        <span>Total</span>
                    </div>
                </div>
                @for (var i = 0; i < ViewBag.OrderItem.Count; i++)
                {
                    <div class="product-cart d-flex">
                        <div class="one-forth">
                            <div class="display-tc">
                                <h3>@ViewBag.OrderItem[i].ProductName</h3>
                            </div>
                        </div>
                        <div class="one-eight text-center">
                            <div class="display-tc">
                                <span class="price">@ViewBag.OrderItem[i].Price VND</span>
                            </div>
                        </div>
                        <div class="one-eight text-center">
                            <div class="display-tc">
                                <input type="text" id="quantity" name="quantity" class="form-control input-number text-center" value="@ViewBag.OrderItem[i].Quantity" min="1" max="100" disabled>
                            </div>
                        </div>
                        <div class="one-eight text-center">
                            <div class="display-tc">
                                <span class="price">@ViewBag.OrderItem[i].PricePerProduct VND</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row row-pb-lg">
            <div class="col-md-12">
                <div class="total-wrap">
                    <div class="row">
                        <div class="col-sm-4 text-center">
                            <div class="total">
                                <div class="sub">
                                    <p><span><strong>Total:</strong></span> <span>@ViewBag.TotalPrice VND</span></p>
                                </div>
                                <div class="grand-total">
                                    <p><span><strong>Delivery Status:</strong></span> <span>@ViewBag.Order.DeliveryStatus</span></p>
                                    <p><span><strong>Payment Status:</strong></span> <span>@ViewBag.Order.PaymentStatus</span></p>
                                </div>
                                <div class="grand-total">
                                    <p><span><strong>Address:</strong></span> <span>@ViewBag.Order.Address.AddressName</span></p>
                                    <p><span><strong>Phone Number:</strong></span> <span>@ViewBag.Order.Address.PhoneNumber</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

